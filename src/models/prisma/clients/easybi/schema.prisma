generator client {
    provider = "prisma-client-js"
    output   = "../clients/easybi"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

enum Dialect{
    mysql
    postgresql
    sqlserver
    oracle
    sqlite
}

model User {
    id          Int             @id @default(autoincrement())
    email       String          @unique
    name        String
    sources     Source[]
}

model Source {
    id          Int             @id @default(autoincrement())
    owner       User @relation(fields:[owner_id], references: [id])
    owner_id    Int
    name        String
    user        String
    pass        String
    host        String
    port        String
    database    String
    dialect     Dialect
    entities    Entity[]
}

model Entity {
    id          Int @id @default(autoincrement())
    name        String
    source      Source @relation(fields:[source_id], references: [id])
    source_id   Int
    properties  Property[]
}

model Property{
    id          BigInt @id @default(autoincrement())
    name        String
    entity      Entity @relation(fields:[entity_id], references: [id])
    entity_id   Int
}